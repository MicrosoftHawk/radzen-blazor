<RadzenFormField Text="RadzenDropDown:">
    <RadzenDropDown Data="@data" @bind-Value="@dropDownValue" />
</RadzenFormField>
<RadzenFormField Text="RadzenDropDownDataGrid:">
    <RadzenDropDownDataGrid Data="@data" @bind-Value="@dropDownDataGridValue" />
</RadzenFormField>
<RadzenFormField Text="RadzenAutoComplete:">
    <RadzenAutoComplete Data="@data" @bind-Value="@autoCompleteValue" />
</RadzenFormField>
<RadzenFormField Text="Disabled:">
    <RadzenDropDown Data="@data" @bind-Value="@dropDownValue" Disabled="@disabled" />
</RadzenFormField>
<RadzenCheckBox Text="Disabled" @bind-Value="disabled" />
@code {
    bool disabled;
    string dropDownValue = "";
    string dropDownDataGridValue = "";
    string autoCompleteValue = "";
    string [] data = new string [] { "One", "Two", "Three" };
}