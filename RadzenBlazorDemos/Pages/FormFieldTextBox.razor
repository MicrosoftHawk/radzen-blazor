<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceEvenly" Wrap="FlexWrap.Wrap" Gap="1rem" >
    <RadzenFormField Text="Label">
        <RadzenTextBox @bind-Value="@value" Disabled="@disabled" />
    </RadzenFormField>
    <RadzenFormField Text="Label" Variant="Variant.Text">
        <RadzenTextBox @bind-Value="@value" Disabled="@disabled" />
    </RadzenFormField>
    <RadzenFormField Text="Label" Variant="Variant.Flat">
        <RadzenTextBox @bind-Value="@value" Disabled="@disabled" />
    </RadzenFormField>
    <RadzenFormField Text="Label" Variant="Variant.Filled">
        <RadzenTextBox @bind-Value="@value" Disabled="@disabled" />
    </RadzenFormField>
</RadzenStack>
<RadzenCheckBox Text="Disabled" @bind-Value="disabled" />

@code {
    string value = "";
    bool disabled = false;
    double? number = null;
}