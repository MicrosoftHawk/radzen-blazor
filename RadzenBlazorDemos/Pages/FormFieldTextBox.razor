<RadzenFormField Text="RadzenTextBox:">
    <RadzenTextBox @bind-Value="@value" />
</RadzenFormField>
<RadzenFormField Text="Start and End:">
    <Start>
        <RadzenIcon Icon="check_circle" />
    </Start>
    <ChildContent>
        <RadzenTextBox />
    </ChildContent>
    <End>
        <RadzenIcon Icon="autorenew" />
    </End>
</RadzenFormField>
<RadzenFormField Text="RadzenNumeric:">
    <RadzenNumeric @bind-Value="@number" />
</RadzenFormField>
<RadzenFormField Text="RadzenTextArea:">
    <RadzenTextArea />
</RadzenFormField>
<RadzenFormField Text="RadzenMask:">
    <RadzenMask Mask="***-**-****" CharacterPattern="[0-9]" />
</RadzenFormField>
<RadzenFormField Text="RadzenPassword:">
    <RadzenPassword />
</RadzenFormField>
<RadzenFormField Text="Disabled:">
    <RadzenTextBox Disabled="@disabled" />
</RadzenFormField>
<RadzenCheckBox Text="Disabled" @bind-Value="disabled" />
@code {
    string value = "";
    bool disabled = false;
    double? number = null;
}